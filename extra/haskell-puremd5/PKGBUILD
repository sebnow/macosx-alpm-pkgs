pkgname=haskell-puremd5
pkgrel=3
pkgver=0.2.4
pkgdesc="MD5 implementations that should become part of a ByteString Crypto package."
url="http://hackage.haskell.org/cgi-bin/hackage-scripts/package/pureMD5"
license=('custom:BSD3')
arch=('i386' 'x86_64')
makedepends=('ghc' 'haskell-cabal' 'haskell-binary>=0.4.0')
depends=('ghc' 'haskell-cabal' 'haskell-binary>=0.4.0')
options=('strip')
source=("http://hackage.haskell.org/packages/archive/pureMD5/$pkgver/pureMD5-$pkgver.tar.gz")
install=haskell-puremd5.install
md5sums=('f6791a478a382b5a7c2445ba13bf87df')
build() {
  cd "$srcdir/pureMD5-$pkgver"
  runhaskell Setup configure --prefix=/usr/local || return 1
  runhaskell Setup build || return 1
  runhaskell Setup register --gen-script || return 1
  runhaskell Setup unregister --gen-script || return 1
  mkdir -p "$pkgdir/usr/local/share/haskell/$pkgname/"
  install -m744 register.sh "$pkgdir/usr/local/share/haskell/$pkgname/register.sh"
  install -m744 unregister.sh "$pkgdir/usr/local/share/haskell/$pkgname/unregister.sh"
  runhaskell Setup copy --destdir="$pkgdir" || return 1
  mkdir -p "$pkgdir/usr/local/share/licenses/$pkgname/"
  install -m644 LICENSE "$pkgdir/usr/local/share/licenses/$pkgname/LICENSE" || return 1
}
